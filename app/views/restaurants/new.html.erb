<div class="restaurant-container">
  <%= form_for @restaurant do |f| %>
    <div class="form-group">
      <%= f.label :name, class: 'form-label' %>
      <%= f.text_field :name, class: 'form-control', autofocus: 'autofocus' %>
      <% if @restaurant.errors.messages[:name].any? %>
        <div class="alert-control-container">
          <div class="alert-control-content">
            <p class="text-danger bg-danger">
              <i>- <%= @restaurant.errors.messages[:name][0] %></i>
            </p>
          </div>
        </div>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.label :address, class: 'form-label' %>
      <%= f.text_field :address, class: 'form-control' %>
      <% if @restaurant.errors.messages[:address].any? %>
        <div class="alert-control-container">
          <div class="alert-control-content">
            <p class="text-danger bg-danger">
              <i>- <%= @restaurant.errors.messages[:address][0] %></i>
            </p>
          </div>
        </div>
      <% end %>

    </div>
    <div class="form-group">
      <%= f.label :category, class: 'form-label' %>
      <%= f.select :category, options_for_select([["chinese", "chinese"], ["italian", "italian"], ['japanese', 'japanese'], ['french','french'], ['belgian','belgian']]) %>

    </div>
    <div class="form-group">
      <%= f.submit 'submit', class: 'form-control btn btn-primary' %>
    </div>

  <% end %>
</div>

